@model MyMvcAuthProject.ViewModels.PublicProfileViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Profile?.DisplayName + " - Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- CSS Dependencies -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #FA5D19;
            --primary-hover: #e04e0b;
            --text-main: #262626;
            --text-secondary: rgba(38, 38, 38, 0.6);
            --bg-color: #F9F9F9;
            --card-bg: #FFFFFF;
            --border-color: rgba(0, 0, 0, 0.08);
            --shadow-sm: 0px 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0px 4px 6px -1px rgba(0, 0, 0, 0.1), 0px 2px 4px -1px rgba(0, 0, 0, 0.06);
            --radius-lg: 24px;
            --radius-full: 999px;
            --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
            --font-mono: 'Geist Mono', monospace;
        }

        body {
            background-color: var(--bg-color);
            background-image: linear-gradient(rgba(0,0,0,0.03) 1px, transparent 1px),
                            linear-gradient(90deg, rgba(0,0,0,0.03) 1px, transparent 1px);
            background-size: 20px 20px;
            font-family: var(--font-sans);
            color: var(--text-main);
        }

        .profile-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 0 20px;
        }

        /* Profile Header */
        .profile-header {
            text-align: center;
            margin-bottom: 40px;
            animation: fadeIn 0.6s ease-out;
        }

        .profile-icon {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            margin: 0 auto 20px;
            overflow: hidden;
            box-shadow: var(--shadow-md);
            border: 4px solid var(--card-bg);
        }

        .profile-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-name {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 8px;
            letter-spacing: -0.02em;
        }

        .profile-bio {
            color: var(--text-secondary);
            font-size: 1rem;
            max-width: 600px;
            margin: 0 auto 30px;
            line-height: 1.6;
        }

        /* Tabs */
        .nav-tabs {
            border-bottom: 1px solid var(--border-color);
            justify-content: center;
            margin-bottom: 40px;
            gap: 20px;
        }

        .nav-tabs .nav-link {
            color: var(--text-secondary);
            border: none;
            padding: 12px 20px;
            font-weight: 500;
            background-color: transparent;
            cursor: pointer;
            border-bottom: 2px solid transparent;
            transition: all 0.2s ease;
        }

        .nav-tabs .nav-link:hover {
            color: var(--primary-color);
        }

        .nav-tabs .nav-link.active {
            color: var(--primary-color);
            border-bottom: 2px solid var(--primary-color);
            background-color: transparent;
        }

        /* Content Sections */
        .content-section {
            display: none;
            animation: slideUp 0.4s ease-out;
            padding-bottom: 60px;
        }

        .content-section.active {
            display: block;
        }

        /* List Cards */
        .section-wrapper {
            transition: transform 0.2s ease;
        }
        
        .section-wrapper:hover {
            transform: translateY(-4px);
        }

        .section-card {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            padding: 12px;
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
            overflow: hidden;
            transition: box-shadow 0.2s ease;
            position: relative;
        }
        
        .section-card:hover {
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
        }

        .book-cover-container {
            width: 100%;
            height: 100%;
            border-radius: 16px;
            overflow: hidden;
        }

        .book-cover-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .section-card:hover .book-cover-img {
            transform: scale(1.05);
        }

        .section-info {
            margin-top: 16px;
            text-align: center;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-main);
            margin-bottom: 4px;
        }
        
        .book-count {
            color: var(--text-secondary);
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Review & Post Cards */
        .card-custom {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
            padding: 24px;
            margin-bottom: 20px;
            transition: box-shadow 0.2s ease;
        }

        .card-custom:hover {
            box-shadow: var(--shadow-md);
        }

        .card-header-custom {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 16px;
        }

        .card-header-custom img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid var(--border-color);
        }

        .card-header-custom .name {
            font-weight: 600;
            font-size: 1rem;
            color: var(--text-main);
        }

        .card-header-custom .time {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        .post-content {
            color: var(--text-main);
            line-height: 1.6;
            font-size: 1rem;
        }

        .stars {
            color: #FFB02E; /* Warmer amber for stars */
            margin-bottom: 12px;
            font-size: 0.9rem;
        }

        .tag {
            background-color: rgba(250, 93, 25, 0.1);
            color: var(--primary-color);
            padding: 6px 12px;
            border-radius: var(--radius-full);
            font-size: 0.8rem;
            font-weight: 500;
            margin: 8px 8px 0 0;
            display: inline-block;
        }

        /* Helper Classes */
        .empty-state {
            text-align: center;
            padding: 60px 0;
            color: var(--text-secondary);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 16px;
            opacity: 0.3;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <!-- Header -->
        <div class="profile-header">
            <div class="profile-icon">
                <img src="@(Model.Profile?.UserImage ?? "https://randomuser.me/api/portraits/lego/1.jpg")" class="profile-img" alt="Profile">
            </div>

            <h1 class="profile-name">@(Model.Profile?.DisplayName ?? "Reader")</h1>
            
            <p class="profile-bio">
                @(Model.Profile?.Bio ?? "No bio yet.")
            </p>
        </div>

        <!-- Navigation -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-tab="lists">Lists</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-tab="reviews">Reviews</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-tab="posts">Posts</a>
            </li>
        </ul>

        <!-- Books Lists Section -->
        <div class="content-section active" id="lists-section">
            <div class="row g-4 justify-content-center">
                @{
                    var listTypes = new[] { "Want to Read", "Currently Reading", "Finished", "Did Not Finish" };
                    var listImages = new Dictionary<string, string>
                    {
                        { "Want to Read", "https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?w=500" },
                        { "Currently Reading", "https://images.unsplash.com/photo-1507842217343-583bb7270b66?w=500" },
                        { "Finished", "https://images.unsplash.com/photo-1544716278-ca5e3f4abd8c?w=500" },
                        { "Did Not Finish", "https://images.unsplash.com/photo-1600172454132-f9f9ef58f09a?w=500" }
                    };
                }

                @foreach (var listType in listTypes)
                {
                    var books = Model.BooksLists != null && Model.BooksLists.ContainsKey(listType) 
                        ? Model.BooksLists[listType] 
                        : new List<MyMvcAuthProject.Models.Book>();
                    var count = books.Count;
                    
                    var coverUrl = (count > 0 && !string.IsNullOrEmpty(books[0].BookURL)) 
                        ? books[0].BookURL 
                        : listImages[listType];

                    <div class="col-md-6 col-lg-3">
                        <div class="section-wrapper" style="cursor: pointer;">
                            <div class="section-card">
                                <div class="book-cover-container">
                                    <img src="@coverUrl" class="book-cover-img" alt="@listType">
                                </div>
                            </div>
                            <div class="section-info">
                                <h3 class="section-title">@listType</h3>
                                <p class="book-count">@count books</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="content-section" id="reviews-section">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        @foreach (var review in Model.Reviews)
                        {
                             <div class="card-custom">
                                <div class="card-header-custom">
                                    <img src="@(Model.Profile?.UserImage ?? "https://randomuser.me/api/portraits/lego/1.jpg")" alt="User">
                                    <div>
                                        <div class="name">@(Model.Profile?.DisplayName ?? "User")</div>
                                        <div class="time">Verified Reader</div>
                                    </div>
                                </div>

                                <div class="stars">
                                    @for (int i = 0; i < (review.Rating ?? 5); i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    @for (int i = (review.Rating ?? 5); i < 5; i++)
                                    {
                                        <i class="far fa-star text-muted"></i>
                                    }
                                </div>

                                <p class="post-content">@review.ReviewContent</p>

                                <div class="mt-3">
                                    <span class="tag">Insightful</span>
                                    <span class="tag">Must-read</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-quote-left"></i>
                            <p>No reviews yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Posts Section -->
        <div class="content-section" id="posts-section">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                     @if (Model.Posts != null && Model.Posts.Any())
                    {
                        @foreach (var post in Model.Posts)
                        {
                            <div class="card-custom">
                                <div class="card-header-custom">
                                    <img src="@(Model.Profile?.UserImage ?? "https://randomuser.me/api/portraits/lego/1.jpg")" alt="User">
                                    <div>
                                        <div class="name">@(Model.Profile?.DisplayName ?? "User")</div>
                                        <div class="time">Book Enthusiast</div>
                                    </div>
                                </div>

                                <p class="post-content">@post.PostContent</p>

                                <div class="mt-3">
                                    <span class="tag">Thoughtful</span>
                                    <span class="tag">Book Lover</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-pen-nib"></i>
                            <p>No posts yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Book List Modal -->
    <div class="modal fade" id="bookListModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 rounded-4 shadow-lg">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold ms-2" id="bookListModalLabel">Book List</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="row g-4" id="modalBookList">
                        <!-- Books will be injected here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden Data for JS -->
    <script>
        var booksData = {};
        @if (Model.BooksLists != null)
        {
            foreach(var kvp in Model.BooksLists)
            {
                <text>
                booksData["@kvp.Key"] = [
                    @foreach(var book in kvp.Value)
                    {
                        <text>
                        {
                            title: "@System.Web.HttpUtility.JavaScriptStringEncode(book.Title)",
                            image: "@(string.IsNullOrEmpty(book.BookURL) ? "https://via.placeholder.com/150" : book.BookURL)",
                            url: "/Book/@Uri.EscapeDataString(book.Title)"
                        },
                        </text>
                    }
                ];
                </text>
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
                
                document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));
                
                const tab = this.getAttribute('data-tab');
                if (tab === 'lists') {
                    document.getElementById('lists-section').classList.add('active');
                } else if (tab === 'reviews') {
                    document.getElementById('reviews-section').classList.add('active');
                } else if (tab === 'posts') {
                    document.getElementById('posts-section').classList.add('active');
                }
            });
        });

        // Modal Logic
        document.querySelectorAll('.section-wrapper').forEach(card => {
            card.addEventListener('click', function() {
                // Find the list type title
                const listType = this.querySelector('.section-title').textContent.trim();
                
                const modalTitle = document.getElementById('bookListModalLabel');
                const modalBody = document.getElementById('modalBookList');
                
                modalTitle.textContent = listType;
                modalBody.innerHTML = ''; // Clear previous content

                const books = booksData[listType];

                if (books && books.length > 0) {
                    books.forEach(book => {
                        const col = document.createElement('div');
                        col.className = 'col-6 col-md-4 col-lg-3';
                        col.innerHTML = `
                            <a href="${book.url}" class="d-block text-decoration-none nav-link-custom">
                                <div class="card h-100 border-0 shadow-sm" style="transition: transform 0.2s">
                                    <img src="${book.image}" class="card-img-top rounded-3" alt="${book.title}" style="height: 180px; object-fit: cover;">
                                    <div class="card-body p-2 text-center">
                                        <small class="text-dark fw-bold text-truncate d-block mt-2">${book.title}</small>
                                    </div>
                                </div>
                            </a>
                        `;
                        modalBody.appendChild(col);
                    });
                } else {
                    modalBody.innerHTML = '<div class="col-12 text-center text-muted py-5"><i class="fas fa-book-open fa-2x mb-3 d-block opacity-25"></i>No books in this list.</div>';
                }

                const modal = new bootstrap.Modal(document.getElementById('bookListModal'));
                modal.show();
            });
        });
    </script>
</body>
</html>
