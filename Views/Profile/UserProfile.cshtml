@model UserProfile
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.DisplayName- Fable Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .top-nav-bar {
            background: #0d3d2f;
            padding: 15px 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .top-nav-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-title {
            color: white;
            font-size: 20px;
            font-weight: 300;
        }

        .nav-links {
            display: flex;
            gap: 35px;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            font-weight: 400;
        }

        .nav-links a.active {
            border-bottom: 2px solid #e8b4b8;
        }

        .profile-header {
            background: linear-gradient(135deg, #1a4d3d 0%, #2d6854 100%);
            padding: 60px 40px 80px 40px;
            position: relative;
        }

        .profile-name {
            font-size: 48px;
            font-weight: 400;
            text-align: center;
            background: linear-gradient(135deg, #ffffff 0%, #e8b4b8 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
        }

        .profile-avatar-container {
            position: relative;
            margin-top: -90px;
            text-align: center;
            z-index: 10;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: white;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            border: 3px solid white;
            outline: 3px solid #e0e0e0;
            outline-offset: 2px;
        }

        .butterfly-icon {
            font-size: 60px;
        }

        .profile-content {
            background-color: white;
            padding: 40px;
        }

        .profile-bio {
            text-align: center;
            color: #6c757d;
            font-size: 16px;
            margin: 30px auto;
            max-width: 380px;
            line-height: 1.6;
            padding: 0 20px;
        }

        .profile-menu {
            max-width: 600px;
            margin: 30px auto 0;
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 18px 0;
            border-top: 1px solid #e0e0e0;
            cursor: pointer;
        }

        .menu-item:last-child {
            border-bottom: 1px solid #e0e0e0;
        }

        .menu-icon {
            font-size: 20px;
        }

        .menu-text {
            font-size: 17px;
        }

        /* Right Slide Edit Panel */
        .edit-panel {
            position: fixed;
            top: 0;
            right: -420px;
            width: 420px;
            height: 100vh;
            background: white;
            box-shadow: -2px 0 10px rgba(0,0,0,0.15);
            overflow-y: auto;
            padding: 25px;
            transition: 0.4s ease;
            z-index: 2000;
        }

        .edit-panel.open {
            right: 0;
        }

        .edit-content {
            padding-bottom: 50px;
        }

        .rounded-input {
            border-radius: 20px;
            padding: 10px 15px;
        }

        .edit-title {
            font-weight: bold;
            margin-bottom: 0;
        }

        .edit-profile-pic {
            text-align: center;
            margin-top: 15px;
            margin-bottom: 20px;
        }

        .edit-profile-pic img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
        }
    </style>
</head>

<body>

    <!-- Top Navigation -->
    <div class="top-nav-bar">
        <div class="top-nav-content">
            <div class="nav-title">Your Profile</div>
            <div class="nav-links">
                <a href="#" class="active">Your Profile</a>
                <a href="#">Account Settings</a>
            </div>
        </div>
    </div>

    <!-- Header -->
    <div class="profile-header">
        <h1 class="profile-name">@Model.DisplayName</h1>
    </div>

    <!-- White Content Area -->
    <div class="profile-content">
        <div class="profile-avatar-container">
            <div class="profile-avatar">
                <div class="butterfly-icon">ðŸ¦‹</div>
            </div>
        </div>

        <p class="profile-bio">
           @Model.Bio
        </p>

        <div class="profile-menu">
            <div class="menu-item">
                <div class="menu-item-content">
                    <i class="fa-regular fa-eye menu-icon"></i>
                    <span class="menu-text">View public profile</span>
                </div>
                <i class="fa-solid fa-chevron-right menu-arrow"></i>
            </div>

            <div class="menu-item" id="openEditProfile">
                <div class="menu-item-content">
                    <i class="fa-regular fa-pen-to-square menu-icon"></i>
                    <span class="menu-text">Edit Profile</span>
                </div>
                <i class="fa-solid fa-chevron-right menu-arrow"></i>
            </div>
        </div>
    </div>

    <!-- Right Side Edit Profile Panel -->
    <div id="editProfilePanel" class="edit-panel">
        <div class="edit-content">

            <div style="display: flex; justify-content: center; position: relative;">
                <h4 class="edit-title">Edit Profile</h4>
                <button id="closeEditProfile" class="btn-close"
                    style="position: absolute; right: 0; top: 50%; transform: translateY(-50%);">
                </button>
            </div>

            <div class="edit-profile-pic">
                <img src="https://randomuser.me/api/portraits/women/44.jpg">
                <!-- CHANGED HERE: text-primary â†’ text-dark -->
                <a href="#" class="d-block mt-2 text-dark">Change profile photo</a>
            </div>

            <label class="form-label">Display name</label>
            <input class="form-control rounded-input mb-3" value = @Model.DisplayName>

            <label class="form-label">Bio</label>
            <textarea class="form-control rounded-input mb-3" rows="4">
              @Model.Bio
            </textarea>

            <button class="btn btn-dark rounded-pill w-100 mb-2">Save</button>
            <button class="btn btn-outline-dark rounded-pill w-100" id="cancelEditProfile">Cancel</button>

        </div>
    </div>

    <script>
        const openBtn = document.getElementById("openEditProfile");
        const closeBtn = document.getElementById("closeEditProfile");
        const cancelBtn = document.getElementById("cancelEditProfile");
        const panel = document.getElementById("editProfilePanel");

        openBtn.addEventListener("click", () => {
            panel.classList.add("open");
        });

        closeBtn.addEventListener("click", () => {
            panel.classList.remove("open");
        });

        cancelBtn.addEventListener("click", () => {
            panel.classList.remove("open");
        });
    </script>

</body>
</html>
