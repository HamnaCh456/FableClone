@model Book

<style>
    .about-section {
        font-family: 'Suisse Int\'l', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        color: #262626;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.5rem; /* 24px */
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
        color: #262626;
    }

    .publisher-description {
        line-height: 1.6;
        font-size: 0.95rem; /* ~15px */
        color: rgba(38, 38, 38, 0.8);
    }

    .publisher-description p {
        margin-bottom: 1rem;
    }

    .publisher-description strong {
        font-weight: 600;
        color: #262626;
    }

    .see-more {
        display: inline-block;
        margin-top: 0.5rem;
        color: #FA5D19;
        font-weight: 500;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s ease;
    }

    .see-more:hover {
        color: #d14000; /* Darker orange */
        text-decoration: none;
    }
</style>

<div class="about-section">
    <h2 class="section-title">Publisher Description</h2>

    <div class="publisher-description">
        <p>
            @Model.Description
        </p>
    
        <a href="#" class="see-more">See more</a>
    </div>
</div>

<script>
    // See more toggle
    document.querySelector('.see-more')?.addEventListener('click', function(e) {
        e.preventDefault();
        alert('This would expand to show more content');
    });
</script>