<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #f8f9fa;
        }

        .modal-content {
            border: none;
            border-radius: 0;
        }

        /* Close button aligned with search bar */
        .close-btn {
            position: absolute;
            top: 25px;
            left: 50%;
            transform: translateX(-390px);
            background: none;
            border: none;
            font-size: 26px;
            cursor: pointer;
            color: #333;
            z-index: 10;
        }

        .close-btn:hover {
            color: #000;
        }

        /* Lower section spacing */
        .search-container {
            max-width: 1100px;
            margin: 0 auto;
            padding-top: 110px;
        }

        /* Fix numeral height (1M+) */
        .search-title {
            font-size: 1.75rem;
            font-weight: 400;
            text-align: center;
            margin-bottom: 30px;
            color: #1a1a1a;
            font-variant-numeric: lining-nums;
        }

        .search-wrapper {
            position: relative;
            max-width: 780px;
            margin: 0 auto;
        }

        /* âœ… Search bar with no outline or border */
        .search-input {
            width: 100%;
            padding: 12px 60px 12px 20px;
            font-size: 1rem;
            border: none !important;
            border-radius: 50px;
            background-color: #eeeeee;
            outline: none !important;
            box-shadow: none !important;
        }

        .search-input:focus {
            border: none !important;
            outline: none !important;
            box-shadow: none !important;
            background-color: #e5e5e5;
        }

        .search-input::placeholder {
            color: #777;
        }

        .search-btn {
            position: absolute;
            right: 6px;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 40px;
            background-color: #000;
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .search-btn i {
            color: white;
            font-size: 1rem;
        }

        .clear-btn {
            position: absolute;
            right: 55px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background-color: #d0d0d0;
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .clear-btn.show {
            display: flex;
        }

        .results-container {
            max-width: 780px;
            margin: 30px auto 0;
            background: white;
            display: none;
        }

        .results-container.show {
            display: block;
        }

        .book-item {
            display: flex;
            align-items: center;
            padding: 20px;
            border-bottom: 1px solid #e0e0e0;
            cursor: pointer;
        }

        .book-item:hover {
            background-color: #f8f9fa;
        }

        .book-cover {
            width: 80px;
            height: 120px;
            object-fit: cover;
            border-radius: 4px;
            margin-right: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }
    </style>
</head>

<body>
    <div class="container-fluid">

        <button class="close-btn" aria-label="Close">
            <i class="fas fa-times"></i>
        </button>

        <div class="search-container">
            <h1 class="search-title">Search 1M+ books to organize & read</h1>

            <div class="search-wrapper">
                <input type="text" class="search-input" placeholder="Shop 1M+ ebooks..." id="bookSearch">

                <button class="clear-btn" aria-label="Clear" id="clearBtn">
                    <i class="fas fa-times"></i>
                </button>

                <button class="search-btn" aria-label="Search">
                    <i class="fas fa-search"></i>
                </button>
            </div>

            <div class="results-container" id="resultsContainer">
            </div>
        </div>
    </div>

    <script>
        const searchInput = document.getElementById('bookSearch');
        const clearBtn = document.getElementById('clearBtn');
        const resultsContainer = document.getElementById('resultsContainer');
        let debounceTimer;
        // this part of code passes the name of the book to the controller Store
        function performSearch(query) {
            if (!query) {
                resultsContainer.innerHTML = '';
                return;
            }
            
            fetch('/Book/Store?name=' + encodeURIComponent(query))
                .then(response => response.text())
                .then(html => {
                    resultsContainer.innerHTML = html;
                    resultsContainer.classList.add('show');
                })
                .catch(error => console.error('Error fetching books:', error));
        }

        searchInput.addEventListener('input', function() {
            const query = this.value.trim();
            
            if (query.length > 0) {
                clearBtn.classList.add('show');
                resultsContainer.classList.add('show');
                
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    performSearch(query);
                }, 300); // 300ms debounce
            } else {
                clearBtn.classList.remove('show');
                resultsContainer.classList.remove('show');
                resultsContainer.innerHTML = '';
            }
        });

        clearBtn.addEventListener('click', function() {
            searchInput.value = '';
            clearBtn.classList.remove('show');
            resultsContainer.classList.remove('show');
            resultsContainer.innerHTML = '';
            searchInput.focus();
        });

        document.querySelector('.search-btn').addEventListener('click', function() {
            const query = searchInput.value.trim();
            if (query) {
                performSearch(query);
            }
        });
        
        // Allow pressing Enter to search immediately
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const query = searchInput.value.trim();
                if (query) {
                    clearTimeout(debounceTimer);
                    performSearch(query);
                }
            }
        });
    </script>
</body>
</html>
