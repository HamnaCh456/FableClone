@{
    ViewData["Title"] = "All Books";
}

<!-- Google Fonts: Outfit for a premium, clean look -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Firecrawl Design System - Strict Adherence */
    :root {
        /* Colors */
        --fc-primary: #FA5D19;
        --fc-primary-hover: #e54d10; /* Slightly darker for hover */
        --fc-bg: #F9F9F9;
        --fc-surface: #FFFFFF;
        --fc-text-primary: #262626;
        --fc-text-secondary: rgba(38, 38, 38, 0.72);
        --fc-border: #EDEDED;
            --fc-border-hover: #E8E8E8;
        
        /* Shadows */
        --fc-shadow-card: 0px 2px 4px rgba(0,0,0,0.02);
        --fc-shadow-hover: 0px 12px 24px rgba(0,0,0,0.06);
        --fc-shadow-focus: 0 0 0 2px rgba(250, 93, 25, 0.1);
        
        /* Typography */
        --fc-font-family: "Outfit", system-ui, -apple-system, sans-serif;
        
        /* Radius */
        --fc-radius-input: 10px;
        --fc-radius-card: 12px;
        --fc-radius-btn: 10px;
        
        /* Transitions */
        --fc-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Scoped container instead of body */
    .explore-container {
        font-family: var(--fc-font-family);
        color: var(--fc-text-primary);
        /* padding: 40px 0; Removed to fix layout alignment with topbar */
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
    }

    /* Container adjustment */
    .explore-container .container {
        max-width: 1200px;
        padding: 0 40px !important;
        margin: 0 auto;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-in {
        animation: fadeInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
    }

    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }
    .delay-3 { animation-delay: 0.3s; }
    .delay-4 { animation-delay: 0.4s; }

    /* Typography */
    .explore-title {
        font-size: 3rem; /* ~48px */
        font-weight: 700;
        letter-spacing: -0.02em;
        margin-bottom: 24px;
        color: var(--fc-text-primary);
        line-height: 1.1;
    }

    .section-title-custom {
        font-size: 1.5rem; /* ~24px */
        font-weight: 600;
        color: var(--fc-text-primary);
        margin-bottom: 4px;
        letter-spacing: -0.01em;
    }

    .section-subtitle {
        font-size: 1rem;
        color: var(--fc-text-secondary);
        margin-bottom: 24px;
        font-weight: 400;
    }

    /* Search Bar */
    .custom-search {
        position: relative;
        width: 100%;
        max-width: 500px;
        margin-bottom: 48px;
    }

    .custom-search .search-input {
        width: 100%;
        height: 48px;
        padding: 0 48px 0 16px;
        font-size: 1rem;
        border: 1px solid var(--fc-border);
        border-radius: var(--fc-radius-input);
        background-color: var(--fc-surface);
        outline: none;
        transition: var(--fc-transition);
        color: var(--fc-text-primary);
        font-weight: 400;
    }

    .custom-search .search-input::placeholder {
        color: var(--fc-text-secondary);
        opacity: 0.8;
    }

    .custom-search .search-input:hover {
            border-color: var(--fc-border-hover);
            background-color: #fcfcfc;
    }

    .custom-search .search-input:focus {
        border-color: var(--fc-primary);
        box-shadow: var(--fc-shadow-focus);
        background-color: var(--fc-surface);
    }

    .custom-search .search-icon-static {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--fc-text-secondary);
        pointer-events: none;
        font-size: 1.1rem;
    }

    /* Button Reset for clear btn */
    .custom-search .clear-btn {
        position: absolute;
        right: 48px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: none;
        color: var(--fc-text-secondary);
        display: none;
        padding: 8px;
        cursor: pointer;
        transition: color 0.2s;
    }
    .custom-search .clear-btn:hover { color: var(--fc-primary); }

    /* Books Layout */
    .content-section {
        margin-bottom: 64px;
    }

    .books-scroll-container {
        /* Enable horizontal scroll if items overflow, but try to grid first? 
            Design instr says "horizontal layout", keeping that.
        */
        overflow-x: auto;
        overflow-y: hidden;
        padding: 4px; /* Space for focus rings */
        margin: -4px;
        padding-bottom: 24px; /* Space for shadows */
            /* Hide scrollbar for cleaner look, but allow functionality */
        scrollbar-width: thin;
        scrollbar-color: rgba(0,0,0,0.1) transparent;
    }

    .books-scroll-container::-webkit-scrollbar { height: 6px; }
    .books-scroll-container::-webkit-scrollbar-track { background: transparent; }
    .books-scroll-container::-webkit-scrollbar-thumb { background-color: rgba(0,0,0,0.1); border-radius: 20px; }

    .books-wrapper {
        display: flex;
        gap: 20px;
    }

    /* Simple Card */
    .book-card {
        flex: 0 0 auto;
        width: 150px;
        transition: var(--fc-transition);
        border-radius: var(--fc-radius-card);
        position: relative; 
    }

    .book-cover {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: var(--fc-radius-card);
        border: 1px solid var(--fc-border);
        /* Subtle default shadow */
        box-shadow: var(--fc-shadow-card);
        transition: var(--fc-transition);
        display: block;
        background-color: #eee; /* Placeholder bg */
    }

    /* Hover Interaction */
    .book-card:hover .book-cover {
        transform: translateY(-4px);
        box-shadow: var(--fc-shadow-hover);
        border-color: rgba(0,0,0,0.05);
    }
</style>

<div class="explore-container">
    <div class="container">
        <!-- Explore + Search -->
        <div class="animate-in">
            <h1 class="explore-title">Explore</h1>
            <div class="search-wrapper custom-search">
                <input type="text" class="search-input" placeholder="Search for books, authors..." onclick="location.href='@Url.Action("Search", "Book")'" readonly>
                <button class="clear-btn" aria-label="Clear">
                    <i class="fas fa-times"></i>
                </button>
                <i class="fas fa-search search-icon-static"></i>
            </div>
        </div>

        <!-- Content Sections -->
        
        <!-- Fiction -->
        <div class="content-section animate-in delay-1">
            <h2 class="section-title-custom">Fiction</h2>
            <p class="section-subtitle">Stories that transport you to another world.</p>
            <div class="books-scroll-container">
                <div class="books-wrapper">
                    @if (ViewBag.FictionBooks != null)
                    {
                        @foreach (var book in ViewBag.FictionBooks)
                        {
                            <div class="book-card">
                                <a href="@Url.Action("Index", "Book", new { name = book.Title })">
                                    <img class="book-cover" src="@book.BookURL" alt="@book.Title">
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Politics -->
        <div class="content-section animate-in delay-2">
            <h2 class="section-title-custom">Politics</h2>
            <p class="section-subtitle">Understanding power, policy, and society.</p>
            <div class="books-scroll-container">
                <div class="books-wrapper">
                    @if (ViewBag.PoliticsBooks != null)
                    {
                        @foreach (var book in ViewBag.PoliticsBooks)
                        {
                            <div class="book-card">
                                <a href="@Url.Action("Index", "Book", new { name = book.Title })">
                                    <img class="book-cover" src="@book.BookURL" alt="@book.Title">
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Philosophy -->
        <div class="content-section animate-in delay-3">
            <h2 class="section-title-custom">Philosophy</h2>
            <p class="section-subtitle">Exploring the fundamental nature of knowledge and reality.</p>
            <div class="books-scroll-container">
                <div class="books-wrapper">
                    @if (ViewBag.PhilosophyBooks != null)
                    {
                        @foreach (var book in ViewBag.PhilosophyBooks)
                        {
                            <div class="book-card">
                                <a href="@Url.Action("Index", "Book", new { name = book.Title })">
                                    <img class="book-cover" src="@book.BookURL" alt="@book.Title">
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Non Fiction -->
        <div class="content-section animate-in delay-4">
            <h2 class="section-title-custom">Non Fiction</h2>
            <p class="section-subtitle">Real-world insights and factual narratives.</p>
            <div class="books-scroll-container">
                <div class="books-wrapper">
                    @if (ViewBag.NonFictionBooks != null)
                    {
                        @foreach (var book in ViewBag.NonFictionBooks)
                        {
                            <div class="book-card">
                                <a href="@Url.Action("Index", "Book", new { name = book.Title })">
                                    <img class="book-cover" src="@book.BookURL" alt="@book.Title">
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const searchInput = document.querySelector('.search-input');
    const clearBtn = document.querySelector('.clear-btn');

    if (searchInput && clearBtn) {
        searchInput.addEventListener('input', () => {
            if (searchInput.value.length > 0) {
                clearBtn.style.display = "flex";
            } else {
                clearBtn.style.display = "none";
            }
        });

        clearBtn.addEventListener('click', () => {
            searchInput.value = "";
            clearBtn.style.display = "none";
            searchInput.focus();
        });
    }
</script>
