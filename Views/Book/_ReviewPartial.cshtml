<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Reviews</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      padding: 60px 100px;
      background-color: #fafafa;
    }
    .review-card {
      background: white;
      border-radius: 15px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      padding: 20px;
      margin-bottom: 25px;
    }
    .review-header {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 10px;
    }
    .review-header img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
    }
    .review-header .name {
      font-weight: 600;
      font-size: 1.1rem;
    }
    .review-header .time {
      color: #888;
      font-size: 0.9rem;
    }
    .stars {
      color: #ffc107;
      margin-bottom: 10px;
    }
    .tag {
      background-color: #198754;
      color: white;
      padding: 5px 10px;
      border-radius: 25px;
      font-size: 0.8rem;
      margin: 4px 6px 0 0;
      display: inline-block;
    }
  </style>
</head>

<body>

  <div class="container">
    <h3 class="mb-4 fw-bold">@Model.Title Reviews</h3>
@foreach (var review in ViewBag.Reviews)
{
    <!-- Rating summary -->
    <div class="d-flex align-items-center mb-4">
      <div class="stars fs-5 me-2">
        ★★★★☆
      </div>
      <span class="fw-semibold">@ViewBag.Rating</span>
    </div>

    <!-- Review 1 -->
    <div class="review-card">
      <div class="review-header">
        <img src="@(ViewBag.UserImages != null && ViewBag.UserImages.ContainsKey(review.UserId) ? ViewBag.UserImages[review.UserId] : "https://randomuser.me/api/portraits/women/44.jpg")" alt="User">
        <div>
          <div class="name">
              @if(ViewBag.UserDisplayNames != null && ViewBag.UserDisplayNames.ContainsKey(review.UserId))
              {
                  @ViewBag.UserDisplayNames[review.UserId]
              }
              else
              {
                  @:User
              }
          </div>
          <div class="time">Created about 3 hours ago</div>
        </div>
      </div>

      <div class="stars">★★★★★</div>

      <p>
        @review.ReviewContent
      </p>

      <div>
        <span class="tag">Believable</span>
        <span class="tag">Likeable</span>
        <span class="tag">Memorable</span>
        <span class="tag">Multilayered</span>
        <span class="tag">Original</span>
        <span class="tag">Strong relationships</span>
        <span class="tag">Action-packed</span>
        <span class="tag">Addictive</span>
        <span class="tag">Gripping/exciting</span>
        <span class="tag">Setting fits the story</span>
        <span class="tag">Unique location</span>
        <span class="tag">Beautifully-written</span>
        <span class="tag">War violence</span>
      </div>
    </div>
}


  </div>

</body>
</html>