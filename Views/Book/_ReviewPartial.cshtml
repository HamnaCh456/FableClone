@model MyMvcAuthProject.Models.Book
<div id="reviewsContainer">
    <style>
        .review-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 20px;
            margin-bottom: 25px;
        }

        .review-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
        }

            .review-header img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                object-fit: cover;
            }

            .review-header .name {
                font-weight: 600;
                font-size: 1.1rem;
            }

            .review-header .time {
                color: #888;
                font-size: 0.9rem;
            }

        .stars {
            color: #ffc107;
            margin-bottom: 10px;
        }

        .tag {
            background-color: #198754;
            color: white;
            padding: 5px 10px;
            border-radius: 25px;
            font-size: 0.8rem;
            margin: 4px 6px 0 0;
            display: inline-block;
        }

        .btn-add-review {
            background-color: #000;
            color: #fff;
            border-radius: 25px;
            padding: 8px 20px;
            font-weight: 500;
            transition: all 0.3s;
            border: none;
            margin-bottom: 20px;
        }

            .btn-add-review:hover {
                background-color: #333;
                color: #fff;
            }

        #addReviewForm {
            background: #fff;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            margin-bottom: 25px;
            display: none;
        }
    </style>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold mb-0">Reviews</h3>
        <button class="btn btn-add-review" onclick="toggleReviewForm()">Add Review</button>
    </div>

    <!-- Add Review Form -->
    <div id="addReviewFormSection">
        <form id="addReviewForm">
            @Html.AntiForgeryToken()
            <input type="hidden" name="bookId" value="@(Model?.BookId)" />
            <div class="mb-3">
                <label class="form-label fw-bold">Rating</label>
                <select name="rating" class="form-select" required>
                    <option value="5">5 - Excellent</option>
                    <option value="4">4 - Very Good</option>
                    <option value="3">3 - Good</option>
                    <option value="2">2 - Fair</option>
                    <option value="1">1 - Poor</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Your Review</label>
                <textarea name="reviewContent" class="form-control" rows="4" placeholder="Share your thoughts about this book..." required></textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-dark rounded-pill px-4">Post Review</button>
                <button type="button" class="btn btn-outline-secondary rounded-pill px-4" onclick="toggleReviewForm()">Cancel</button>
            </div>
        </form>
    </div>

    @if (ViewBag.Reviews != null && ((IEnumerable<dynamic>)ViewBag.Reviews).Any())
    {
        @foreach (var review in ViewBag.Reviews)
        {
            <div class="review-card">
                <div class="review-header">
                    <img src="@(ViewBag.UserImages != null && ViewBag.UserImages.ContainsKey(review.UserId) ? ViewBag.UserImages[review.UserId] : "https://randomuser.me/api/portraits/women/44.jpg")" alt="User">
                    <div>
                        <div class="name">
                            @(ViewBag.UserDisplayNames != null && ViewBag.UserDisplayNames.ContainsKey(review.UserId) ? ViewBag.UserDisplayNames[review.UserId] : "User")
                        </div>
                        <div class="time">Verified Reader</div>
                    </div>
                </div>

                <div class="stars">
                    @for (int i = 0; i < (review.Rating ?? 5); i++)
                    {
                        <i class="fas fa-star"></i>
                    }
                    @for (int i = (review.Rating ?? 5); i < 5; i++)
                    {
                        <i class="far fa-star text-muted"></i>
                    }
                </div>

                <p>@review.ReviewContent</p>

                <div class="mt-3">
                    <span class="tag">Insightful</span>
                    <span class="tag">Must-read</span>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <p class="text-muted">No reviews yet. Be the first to review this book!</p>
        </div>
    }

    <script>
        function toggleReviewForm() {
            const form = document.getElementById('addReviewForm');
            if (form.style.display === 'none' || form.style.display === '') {
                form.style.display = 'block';
            } else {
                form.style.display = 'none';
            }
        }

        // Use a self-executing function to avoid global namespace pollution
        (function() {
            const form = document.getElementById('addReviewForm');
            if (!form) return;

            console.log("AddReviewForm found, attaching listener");

            form.onsubmit = function (e) {
                e.preventDefault();
                console.log("Form submit triggered");

                const formData = new FormData(this);
                const bookId = formData.get('bookId');
                const rating = formData.get('rating');
                const reviewContent = formData.get('reviewContent');
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                if (!bookId || !reviewContent) {
                    alert("Please fill in all fields.");
                    return false;
                }

                console.log("Submitting review for book:", bookId);

                fetch('/Review/AddReview', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token,
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    credentials: 'same-origin',
                    body: new URLSearchParams({
                        'bookId': bookId,
                        'rating': rating,
                        'reviewContent': reviewContent,
                        '__RequestVerificationToken': token
                    })
                })
                .then(response => {
                    console.log("Response status:", response.status);
                    if (response.ok) {
                        return response.text();
                    }
                    if (response.status === 401) {
                        // Build return URL to redirect back to current book page after login
                        const currentPath = window.location.pathname + window.location.search;
                        const returnUrl = encodeURIComponent(currentPath);
                        alert('Please login to post a review.');
                        window.location.href = '/Identity/Account/Login?ReturnUrl=' + returnUrl;
                        throw new Error("Unauthorized");
                    }
                    return response.text().then(text => { throw new Error(text || 'Server error'); });
                })
                .then(html => {
                    if (html) {
                        // Check if the HTML returned is actually the login page (fail-safe)
                        if (html.includes('Login') && html.includes('form')) {
                             console.warn("Received login page instead of partial view. Redirecting...");
                             window.location.href = '/Identity/Account/Login';
                             return;
                        }

                        const container = document.getElementById('reviews');
                        if (container) {
                            container.innerHTML = html;
                            console.log("Reviews section updated successfully");
                        } else {
                            // Fallback if 'reviews' ID is missing but 'reviewsContainer' is present
                            const containerNested = document.getElementById('reviewsContainer');
                            if (containerNested && containerNested.parentElement) {
                                containerNested.parentElement.innerHTML = html;
                            } else {
                                console.error("Could not find container to update reviews");
                                location.reload(); // Fallback to full reload
                            }
                        }
                    }
                })
                .catch(error => {
                    if (error.message !== "Unauthorized") {
                        console.error('Add Review Error:', error);
                        alert('Error adding review: ' + error.message);
                    }
                });

                return false;
            };
        })();
    </script>
</div>
