<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #FA5D19;
            --primary-hover: #E54D0F;
            --accent-dark: #000000;
            --bg-page: #F9F9F9;
            --surface: #FFFFFF;
            --text-primary: #262626;
            --text-secondary: rgba(38, 38, 38, 0.4);
            --border: rgba(0, 0, 0, 0.08);
            --shadow-sm: 0px 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0px 4px 6px -1px rgba(0, 0, 0, 0.1), 0px 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0px 10px 15px -3px rgba(0, 0, 0, 0.1), 0px 4px 6px -2px rgba(0, 0, 0, 0.05);
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 24px;
            --radius-full: 999px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: var(--bg-page);
            background-image: 
                linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
            background-size: 20px 20px;
            background-attachment: fixed;
            color: var(--text-primary);
            font-size: 14px;
            font-weight: 400;
            line-height: 1.5;
            overflow-x: hidden;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .app-container {
            display: flex;
            min-height: 100vh;
        }

        /* ==================== SIDEBAR ==================== */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            background: var(--surface);
            border-right: 1px solid var(--border);
            transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
            width: 260px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            box-shadow: 2px 0 12px rgba(0, 0, 0, 0.02);
        }

        .sidebar.collapsed {
            width: 72px;
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            padding: 0 24px;
            gap: 12px;
            border-bottom: 1px solid var(--border);
            height: 72px;
            min-height: 72px;
        }



        .brand-link {
            color: var(--text-primary);
            text-decoration: none;
            font-size: 20px;
            font-weight: 700;
            letter-spacing: -0.02em;
            white-space: nowrap;
            opacity: 1;
            transition: opacity 300ms ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .brand-link::before {
            display: none;
        }

        .sidebar.collapsed .brand-link {
            opacity: 0;
            pointer-events: none;
        }

        .brand-link:hover {
            color: var(--primary);
        }

        .nav-links {
            flex: 1;
            padding: 16px 12px;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .nav-links::-webkit-scrollbar {
            width: 4px;
        }

        .nav-links::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 2px;
        }

        .nav-link-custom {
            display: flex;
            align-items: center;
            gap: 14px;
            padding: 12px 14px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 200ms ease;
            position: relative;
            border-radius: var(--radius-sm);
            margin-bottom: 4px;
            font-weight: 450;
            font-size: 14px;
        }

        .nav-link-custom svg {
            flex-shrink: 0;
            min-width: 20px;
            transition: transform 200ms ease;
        }

        .nav-link-custom span {
            white-space: nowrap;
            opacity: 1;
            transition: opacity 300ms ease;
        }

        .sidebar.collapsed .nav-link-custom span {
            opacity: 0;
            pointer-events: none;
        }

        .sidebar.collapsed .nav-link-custom {
            justify-content: center;
            padding: 12px;
        }

        .nav-link-custom:hover {
            background: rgba(250, 93, 25, 0.05);
            color: var(--primary);
        }

        .nav-link-custom:hover svg {
            transform: translateX(2px);
        }

        .nav-link-custom.active {
            background: rgba(250, 93, 25, 0.08);
            color: var(--primary);
            font-weight: 500;
        }

        .nav-link-custom.active::before {
            content: "";
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 3px;
            height: 60%;
            background: var(--primary);
            border-radius: 0 2px 2px 0;
        }

        /* ==================== MAIN CONTENT ==================== */
        .main-content {
            flex: 1;
            margin-left: 260px;
            transition: margin-left 300ms cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            min-width: 0;
        }

        .sidebar.collapsed ~ .main-content {
            margin-left: 72px;
        }

        .topbar {
            background: var(--surface);
            border-bottom: 1px solid var(--border);
            padding: 0 28px;
            height: 72px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 100;
            backdrop-filter: blur(8px);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: var(--shadow-sm);
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .topbar-actions {
            display: flex;
            align-items: center;
            gap: 14px;
        }

        .notification-btn {
            position: relative;
            background: var(--surface);
            border: 1px solid var(--border);
            padding: 10px;
            border-radius: var(--radius-sm);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 200ms ease;
            color: var(--text-primary);
            width: 40px;
            height: 40px;
        }

        .notification-btn:hover {
            background: var(--bg-page);
            border-color: rgba(0, 0, 0, 0.12);
            transform: translateY(-1px);
            box-shadow: var(--shadow-sm);
        }

        .notification-btn:active {
            transform: translateY(0) scale(0.98);
        }

        #notificationBadge {
            position: absolute;
            top: -6px;
            right: -6px;
            background: var(--primary);
            color: white;
            border-radius: var(--radius-full);
            width: 20px;
            height: 20px;
            font-size: 11px;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(250, 93, 25, 0.3);
            animation: badgePulse 2s ease-in-out infinite;
        }

        @@keyframes badgePulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .notification-panel {
            position: absolute;
            top: calc(100% + 12px);
            right: 0;
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-lg);
            width: 380px;
            max-height: 480px;
            overflow: hidden;
            z-index: 1000;
            animation: slideDown 200ms ease;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-8px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .notification-header {
            padding: 18px 20px;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--bg-page);
        }

        .notification-header h6 {
            font-size: 15px;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0;
        }

        .btn-clear-all {
            background: transparent;
            border: none;
            color: var(--primary);
            cursor: pointer;
            font-size: 13px;
            font-weight: 500;
            padding: 6px 12px;
            border-radius: var(--radius-sm);
            transition: all 200ms ease;
        }

        .btn-clear-all:hover {
            background: rgba(250, 93, 25, 0.08);
        }

        .notification-list {
            padding: 8px;
            max-height: 400px;
            overflow-y: auto;
        }

        .notification-list::-webkit-scrollbar {
            width: 6px;
        }

        .notification-list::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 3px;
        }

        .notification-item {
            padding: 14px 16px;
            border-radius: var(--radius-sm);
            margin-bottom: 6px;
            background: var(--bg-page);
            border: 1px solid transparent;
            transition: all 200ms ease;
            font-size: 13px;
            line-height: 1.5;
        }

        .notification-item:hover {
            border-color: var(--border);
            background: var(--surface);
        }

        .notification-item strong {
            color: var(--text-primary);
            font-weight: 600;
        }

        .notification-item small {
            color: var(--text-secondary);
            font-size: 11px;
            margin-top: 6px;
            display: block;
        }

        .content-wrapper {
            padding: 28px;
            flex: 1;
        }

        /* ==================== TOAST ==================== */
        .toast {
            background: var(--surface);
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
            border: 1px solid var(--border);
            animation: slideInRight 300ms ease;
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(100px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .toast-header {
            padding: 14px 18px;
            background: var(--primary) !important;
            color: white !important;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
            font-size: 14px;
        }

        .toast-body {
            padding: 16px 18px;
            font-size: 13px;
            color: var(--text-primary);
        }

        .btn-close-white {
            filter: brightness(0) invert(1);
            opacity: 0.8;
        }

        .btn-close-white:hover {
            opacity: 1;
        }

        /* ==================== RESPONSIVE ==================== */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.mobile-open {
                transform: translateX(0);
            }

            .sidebar.collapsed {
                transform: translateX(0);
                width: 72px;
            }

            .main-content {
                margin-left: 0;
            }

            .sidebar.collapsed ~ .main-content {
                margin-left: 72px;
            }

            .notification-panel {
                width: 320px;
            }
        }

        /* ==================== UTILITIES ==================== */
        .d-flex { display: flex; }
        .flex-row { flex-direction: row; }
        .gap-3 { gap: 1rem; }
        .text-center { text-align: center; }
        .text-muted { color: var(--text-secondary); }
        .py-3 { padding-top: 1rem; padding-bottom: 1rem; }
        .mb-0 { margin-bottom: 0; }
        .me-auto { margin-right: auto; }
    </style>
</head>

<body>
    <div class="app-container">

        <!-- Sidebar -->
        <nav class="sidebar" id="appSidebar">
            <div class="sidebar-header">
                <a class="brand-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/logo.png" alt="Dataan Hub" height="32" />
                    <span>Dastaan Hub</span>
                </a>
            </div>

            <div class="nav-links">
                <a class="nav-link-custom" asp-area="" asp-controller="Home" asp-action="Index" title="Home">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    <span>Home</span>
                </a>

                <a class="nav-link-custom" asp-area="" asp-controller="Book" asp-action="ExploreBooks" title="Explore Books">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                    </svg>
                    <span>Explore Books</span>
                </a>

                <a class="nav-link-custom" asp-area="" asp-controller="Post" asp-action="Index" title="Posts">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 11a9 9 0 0 1 9 9"></path>
                        <path d="M4 4a16 16 0 0 1 16 16"></path>
                        <circle cx="5" cy="19" r="1"></circle>
                    </svg>
                    <span>Posts</span>
                </a>

                <a class="nav-link-custom" asp-area="" asp-controller="Author" asp-action="Search" title="Authors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    <span>Authors</span>
                </a>

                <a class="nav-link-custom" asp-area="" asp-controller="Profile" asp-action="UserProfile" title="Profile">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>Profile</span>
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <div class="topbar">
                <div class="section-title"></div>

                <div class="topbar-actions">
                    <div style="position: relative;">
                        <button class="notification-btn" id="notificationButton">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                            </svg>
                            <span id="notificationBadge" style="display:none;">0</span>
                        </button>

                        <div id="notificationPanel" class="notification-panel" style="display: none;">
                            <div class="notification-header">
                                <h6 class="mb-0">Notifications</h6>
                                <button class="btn-clear-all" onclick="clearAllNotifications()">Clear All</button>
                            </div>
                            <div id="notificationList" class="notification-list"></div>
                        </div>
                    </div>

                    <ul class="navbar-nav d-flex flex-row gap-3">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>

            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Toast Notification -->
    <div style="position: fixed; top: 80px; right: 20px; z-index: 9999;">
        <div id="notificationToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="display: none; min-width: 320px;">
            <div class="toast-header">
                <strong class="me-auto">New Book Added!</strong>
                <button type="button" class="btn-close btn-close-white" onclick="document.getElementById('notificationToast').style.display='none'" style="background: none; border: none; font-size: 20px; cursor: pointer; opacity: 0.8;">&times;</button>
            </div>
            <div class="toast-body" id="notificationMessage"></div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>

    <script>
        // ==================== SIDEBAR TOGGLE ====================
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('appSidebar');
            // Sidebar toggle functionality removed as button was removed
            
            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed) {
                sidebar.classList.add('collapsed');
            }

            const notificationBtn = document.getElementById('notificationButton');
            const notificationPanel = document.getElementById('notificationPanel');
            
            if (notificationBtn) {
                notificationBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    notificationPanel.style.display = notificationPanel.style.display === 'none' ? 'block' : 'none';
                });
            }

            document.addEventListener('click', function(e) {
                if (notificationPanel && !notificationPanel.contains(e.target) && e.target !== notificationBtn) {
                    notificationPanel.style.display = 'none';
                }
            });
        });
    </script>

    <!-- ===================== NOTIFICATION + SIGNALR CODE ===================== -->
    <script>
        const NOTIFICATIONS_KEY = 'bookNotifications';
        let notifications = [];
        
        function loadNotifications() {
            const stored = localStorage.getItem(NOTIFICATIONS_KEY);
            notifications = stored ? JSON.parse(stored) : [];
            renderNotifications();
            updateBadge();
        }
        
        function saveNotifications() {
            localStorage.setItem(NOTIFICATIONS_KEY, JSON.stringify(notifications));
        }
        
        function addNotification(bookTitle, authorName) {
            const notification = {
                id: Date.now(),
                bookTitle,
                authorName,
                message: `<strong>${bookTitle}</strong> by ${authorName} has been added to the library!`,
                timestamp: new Date().toISOString(),
                read: false
            };
            notifications.unshift(notification);
            if (notifications.length > 50) notifications = notifications.slice(0, 50);
            saveNotifications();
            renderNotifications();
            updateBadge();
        }
        
        function renderNotifications() {
            const listContainer = document.getElementById('notificationList');
            if (notifications.length === 0) {
                listContainer.innerHTML = `<p class="text-center text-muted py-3">No notifications yet</p>`;
                return;
            }
            listContainer.innerHTML = notifications.map(notif => {
                return `
                    <div class="notification-item">
                        <strong>New Book Added</strong><br>
                        ${notif.message}<br>
                        <small>${new Date(notif.timestamp).toLocaleString()}</small>
                    </div>`;
            }).join('');
        }
        
        function updateBadge() {
            const badge = document.getElementById('notificationBadge');
            const unread = notifications.filter(n => !n.read).length;
            if (badge) {
                badge.textContent = unread;
                badge.style.display = unread > 0 ? 'flex' : 'none';
            }
        }

        function clearAllNotifications() {
            const notificationList = document.getElementById('notificationList');
            const notificationBadge = document.getElementById('notificationBadge');
            
            notifications = [];
            saveNotifications();
            
            if (notificationList) {
                notificationList.innerHTML = '<p class="text-center text-muted py-3">No notifications</p>';
            }
            
            if (notificationBadge) {
                notificationBadge.style.display = 'none';
            }
        }
        
        window.addEventListener('DOMContentLoaded', function () {
            loadNotifications();
        });
        
        // ===================== SIGNALR =====================
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .configureLogging(signalR.LogLevel.Information)
            .build();
        
        connection.on("ReceiveNotification", function (bookTitle, authorName) {
            console.log("New:", bookTitle, authorName);
            addNotification(bookTitle, authorName);
            document.getElementById("notificationMessage").innerHTML =
                `<strong>${bookTitle}</strong> by ${authorName} added!`;
            const toast = document.getElementById("notificationToast");
            toast.style.display = "block";
            setTimeout(() => toast.style.display = "none", 5000);
        });
        
        connection.start()
            .then(() => console.log("SignalR connected"))
            .catch(err => console.error(err));
    </script>
    <!-- ===================== END NOTIFICATION + SIGNALR CODE ===================== -->

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>