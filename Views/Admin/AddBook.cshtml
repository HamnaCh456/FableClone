@model MyMvcAuthProject.Models.ViewModels.AdminAddBookViewModel
@{
    ViewData["Title"] = "Add Book - Admin";
}

<div id="adminAddBookContainer">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

        /* Typography & Variables */
        #adminAddBookContainer {
            font-family: 'Suisse Int\'l', 'Inter', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            color: #262626;
            --primary-orange: #FA5D19;
            --primary-black: #000000;
            --surface-white: #FFFFFF;
            --border-color: rgba(0, 0, 0, 0.08);
            --shadow-subtle: 0px 4px 6px -1px rgba(0, 0, 0, 0.1), 0px 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        /* Card Card */
        .admin-form-card {
            background: var(--surface-white);
            border-radius: 24px;
            box-shadow: var(--shadow-subtle);
            padding: 40px;
            max-width: 800px;
            margin: 0 auto;
            border: 1px solid var(--border-color);
        }

        /* Headings */
        .page-title {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-black);
            letter-spacing: -0.02em;
            margin-bottom: 0;
        }

        /* Section Divider */
        .section-divider {
            border-top: 1px solid var(--border-color);
            margin: 32px 0;
            position: relative;
        }

        .section-divider::before {
            content: attr(data-label);
            position: absolute;
            top: -10px;
            left: 0;
            background: var(--surface-white);
            padding-right: 12px;
            color: #666;
            font-weight: 500;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        /* Forms */
        .form-label {
            font-weight: 500;
            font-size: 0.9rem;
            color: #262626;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid var(--border-color);
            padding: 10px 14px;
            font-size: 14px;
            transition: all 0.2s ease-in-out;
            background-color: var(--surface-white);
            color: #262626;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        }

        .form-control:focus {
            border-color: var(--primary-orange);
            box-shadow: 0 0 0 3px rgba(250, 93, 25, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: rgba(38, 38, 38, 0.4);
        }

        /* Buttons */
        .btn-submit-admin {
            background-color: var(--primary-orange);
            color: #fff;
            border-radius: 999px;
            padding: 0 24px;
            height: 44px;
            font-weight: 500;
            font-size: 14px;
            transition: all 0.2s ease;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        }

        .btn-submit-admin:hover {
            background-color: #e0480b; /* Slightly darker orange */
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(250, 93, 25, 0.25);
            color: #fff;
        }

        /* Alerts */
        .alert-success {
            border-radius: 12px;
            border: 1px solid rgba(25, 135, 84, 0.2);
            background-color: rgba(25, 135, 84, 0.1);
            color: #0f5132;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 16px;
            box-shadow: none;
        }

        .text-danger {
            font-size: 0.8rem;
            margin-top: 4px;
            font-weight: 500;
        }
    </style>

    <div class="d-flex justify-content-between align-items-center mb-5" style="max-width: 800px; margin: 0 auto;">
        <h2 class="page-title">Add New Book & Author</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert" style="max-width: 800px; margin: 0 auto;">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="admin-form-card">
        <form asp-controller="Admin" asp-action="AddBook" method="post">
            @Html.AntiForgeryToken()

            <!-- Book Details Section -->
            <div style="position: relative;">
                <div class="section-divider" data-label="Book Information" style="margin-top: 0; border-top: none;"></div>
                
                <div class="mb-4">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text" style="background:transparent; border-right:none; border-color:var(--border-color); border-radius: 8px 0 0 8px;">$</span>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" style="border-left:none; border-radius: 0 8px 8px 0;" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-4">
                        <label asp-for="Rating" class="form-label"></label>
                        <input asp-for="Rating" class="form-control" type="number" step="0.1" placeholder="0.0 - 5.0" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter book description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="Label" class="form-label"></label>
                        <input asp-for="Label" class="form-control" placeholder="e.g., Fiction, Non-Fiction" />
                        <span asp-validation-for="Label" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-4">
                        <label asp-for="BookURL" class="form-label"></label>
                        <input asp-for="BookURL" class="form-control" placeholder="Book cover image URL (optional)" />
                        <span asp-validation-for="BookURL" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Author Details Section -->
            <div class="section-divider" data-label="Author Information"></div>

            <div>
                <div class="mb-4">
                    <label asp-for="AuthorName" class="form-label"></label>
                    <input asp-for="AuthorName" class="form-control" placeholder="Enter author name" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="AuthorBio" class="form-label"></label>
                    <textarea asp-for="AuthorBio" class="form-control" rows="3" placeholder="Enter author biography"></textarea>
                    <span asp-validation-for="AuthorBio" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="AuthorImage" class="form-label"></label>
                    <input asp-for="AuthorImage" class="form-control" placeholder="Author profile image URL" />
                    <span asp-validation-for="AuthorImage" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-5">
                <button type="submit" class="btn btn-submit-admin">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 5v14M5 12h14"/>
                    </svg>
                    Add Book & Author
                </button>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
