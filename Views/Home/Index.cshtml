            <!-- Dummy Book 1 -->
            <div class="card-custom">
                <div style="height: 200px; background-color: #eee; border-radius: var(--radius-md); margin-bottom: 1rem; display: flex; align-items: center; justify-content: center; color: #888;">
                    Book Cover
                </div>
                <h4 class="h5 fw-bold mb-1">The Silent Star</h4>
                <p class="text-muted small mb-3">By Alan Wake</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="badge bg-secondary">Sci-Fi</span>
                    <button class="btn btn-sm btn-outline-primary">Details</button>
                </div>
            </div>
            <!-- Dummy Book 2 -->
            <div class="card-custom">
                <div style="height: 200px; background-color: #eee; border-radius: var(--radius-md); margin-bottom: 1rem; display: flex; align-items: center; justify-content: center; color: #888;">
                    Book Cover
                </div>
                <h4 class="h5 fw-bold mb-1">Echoes of Time</h4>
                <p class="text-muted small mb-3">By Sarah J.</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="badge bg-secondary">Fantasy</span>
                    <button class="btn btn-sm btn-outline-primary">Details</button>
                </div>
            </div>
            <!-- Dummy Book 3 -->
            <div class="card-custom">
                 <div style="height: 200px; background-color: #eee; border-radius: var(--radius-md); margin-bottom: 1rem; display: flex; align-items: center; justify-content: center; color: #888;">
                    Book Cover
                </div>
                <h4 class="h5 fw-bold mb-1">Modern Systems</h4>
                <p class="text-muted small mb-3">By Tech Guy</p>
