@{
    ViewData["Title"] = "Home Page";
}

<!-- Google Fonts: Outfit for a premium, clean look -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Firecrawl Design System */
    :root {
        --fc-primary: #FA5D19;
        --fc-primary-hover: #e54d10;
        --fc-bg: #F9F9F9;
        --fc-surface: #FFFFFF;
        --fc-text-primary: #262626;
        --fc-text-secondary: rgba(38, 38, 38, 0.72);
        --fc-border: #EDEDED;
        --fc-border-hover: #E8E8E8;
        
        --fc-shadow-card: 0px 2px 4px rgba(0,0,0,0.02);
        --fc-shadow-hover: 0px 12px 24px rgba(0,0,0,0.06);
        --fc-shadow-focus: 0 0 0 2px rgba(250, 93, 25, 0.1);
        
        --fc-font-family: "Outfit", system-ui, -apple-system, sans-serif;
        
        --fc-radius-input: 10px;
        --fc-radius-card: 12px;
        --fc-radius-btn: 10px;
        
        --fc-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .home-container {
        font-family: var(--fc-font-family);
        color: var(--fc-text-primary);
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
        width: 100%;
        max-width: 100%;
        overflow-x: hidden;
    }

    .home-container .container {
        width: 100%;
        padding: 0 !important;
        margin: 0;
        box-sizing: border-box;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-in {
        animation: fadeInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
    }

    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }
    .delay-3 { animation-delay: 0.3s; }
    .delay-4 { animation-delay: 0.4s; }

    /* Search Bar */
    .custom-search {
        position: relative;
        width: 100%;
        max-width: 500px;
        margin-bottom: 48px;
    }

    .custom-search .search-input {
        width: 100%;
        height: 48px;
        padding: 0 48px 0 16px;
        font-size: 1rem;
        border: 1px solid var(--fc-border);
        border-radius: var(--fc-radius-input);
        background-color: var(--fc-surface);
        outline: none;
        transition: var(--fc-transition);
        color: var(--fc-text-primary);
        font-weight: 400;
    }

    .custom-search .search-input::placeholder {
        color: var(--fc-text-secondary);
        opacity: 0.8;
    }

    .custom-search .search-input:hover {
        border-color: var(--fc-border-hover);
        background-color: #fcfcfc;
    }

    .custom-search .search-input:focus {
        border-color: var(--fc-primary);
        box-shadow: var(--fc-shadow-focus);
        background-color: var(--fc-surface);
    }

    .custom-search .search-icon-static {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--fc-text-secondary);
        pointer-events: none;
        font-size: 1.1rem;
    }

    /* Hero Cards Section */
    .hero-cards-wrapper {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 24px;
        margin-bottom: 64px;
        width: 100%;
        min-width: 0;
        box-sizing: border-box;
    }

    .hero-card {
        background: var(--fc-surface);
        border: 1px solid var(--fc-border);
        border-radius: var(--fc-radius-card);
        padding: 20px;
        min-width: 0;
        box-shadow: var(--fc-shadow-card);
        transition: var(--fc-transition);
    }

    .hero-card:hover {
        box-shadow: var(--fc-shadow-hover);
        border-color: var(--fc-border-hover);
    }

    .hero-card .badge {
        display: inline-block;
        padding: 4px 10px;
        background-color: #f5f5f5;
        color: var(--fc-text-primary);
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .hero-card h2 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 8px;
        letter-spacing: -0.02em;
    }

    .hero-card p {
        color: var(--fc-text-secondary);
        margin-bottom: 16px;
        line-height: 1.5;
        font-size: 0.875rem;
    }

    .hero-card .btn-hero {
        display: inline-block;
        padding: 8px 16px;
        background-color: var(--fc-primary);
        color: white;
        border: none;
        border-radius: var(--fc-radius-btn);
        font-weight: 600;
        cursor: pointer;
        transition: var(--fc-transition);
        text-decoration: none;
        font-size: 0.875rem;
    }

    .hero-card .btn-hero:hover {
        background-color: var(--fc-primary-hover);
        transform: translateY(-2px);
    }

    /* Section Styling */
    .content-section {
        margin-bottom: 64px;
    }

    .section-title-custom {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--fc-text-primary);
        margin-bottom: 4px;
        letter-spacing: -0.01em;
    }

    .section-subtitle {
        font-size: 1rem;
        color: var(--fc-text-secondary);
        margin-bottom: 24px;
        font-weight: 400;
    }

    /* Books Grid Container */
    .books-wrapper {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
    }

    /* Book Card */
    .book-card {
        width: 100%;
        transition: var(--fc-transition);
        border-radius: var(--fc-radius-card);
        position: relative;
    }

    .book-cover {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: var(--fc-radius-card);
        border: 1px solid var(--fc-border);
        box-shadow: var(--fc-shadow-card);
        transition: var(--fc-transition);
        display: block;
        background-color: #eee;
    }

    .book-card:hover .book-cover {
        transform: translateY(-4px);
        box-shadow: var(--fc-shadow-hover);
        border-color: rgba(0,0,0,0.05);
    }

    /* Recent Posts Section */
    .recent-posts-grid {
        display: grid;
        gap: 20px;
    }

    .post-card {
        background: var(--fc-surface);
        border: 1px solid var(--fc-border);
        border-radius: var(--fc-radius-card);
        padding: 24px;
        box-shadow: var(--fc-shadow-card);
        transition: var(--fc-transition);
    }

    .post-card:hover {
        box-shadow: var(--fc-shadow-hover);
        border-color: var(--fc-border-hover);
    }

    .post-card .post-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .post-card .post-category {
        color: var(--fc-primary);
        font-weight: 600;
        font-size: 0.875rem;
    }

    .post-card .post-time {
        color: var(--fc-text-secondary);
        font-size: 0.875rem;
    }

    .post-card h5 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 8px;
        letter-spacing: -0.01em;
    }

    .post-card p {
        color: var(--fc-text-secondary);
        line-height: 1.6;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .hero-cards-wrapper {
            grid-template-columns: 1fr;
        }

        .books-wrapper {
            grid-template-columns: repeat(2, 1fr);
        }

        .book-card {
            width: 130px;
        }

        .book-cover {
            height: 190px;
        }
        
        .custom-search {
            max-width: 100%;
        }
    }
</style>

<div class="home-container">
    <div class="container">
        <!-- Search Bar -->
        <div class="animate-in">
            <div class="search-wrapper custom-search">
                <input type="text" class="search-input" placeholder="Search for books, authors..." onclick="location.href='@Url.Action("Search", "Book")'" readonly>
                <i class="fas fa-search search-icon-static"></i>
            </div>
        </div>

        <!-- Hero Cards: Author & Book of the Week -->
        <div class="hero-cards-wrapper animate-in delay-1">
            <div class="hero-card">
                <span class="badge">Author of the Week</span>
                @if (ViewBag.FeaturedAuthor != null)
                {
                    <h2>@ViewBag.FeaturedAuthor.Name</h2>
                    <p>@(string.IsNullOrEmpty(ViewBag.FeaturedAuthor.Bio) ? "A talented author bringing amazing stories to life." : ViewBag.FeaturedAuthor.Bio)</p>
                    <a href="@Url.Action("AuthorProfile", "Author", new { authorId = ViewBag.FeaturedAuthor.AuthorId })" class="btn-hero">View Profile</a>
                }
                else
                {
                    <h2>Featured Author</h2>
                    <p>Discover amazing authors and their incredible stories.</p>
                    <button class="btn-hero" disabled>No Author Available</button>
                }
            </div>
            <div class="hero-card">
                <span class="badge">Book of the Week</span>
                @if (ViewBag.FeaturedBook != null)
                {
                    <h2>@ViewBag.FeaturedBook.Title</h2>
                    <p>@(string.IsNullOrEmpty(ViewBag.FeaturedBook.Description) ? "An amazing book waiting to be discovered." : (ViewBag.FeaturedBook.Description.Length > 120 ? ViewBag.FeaturedBook.Description.Substring(0, 120) + "..." : ViewBag.FeaturedBook.Description))</p>
                    <a href="@Url.Action("Index", "Book", new { name = ViewBag.FeaturedBook.Title })" class="btn-hero">Read Now</a>
                }
                else
                {
                    <h2>Featured Book</h2>
                    <p>Explore our collection of amazing books.</p>
                    <button class="btn-hero" disabled>No Book Available</button>
                }
            </div>
        </div>

        <!-- Books to Explore -->
        <div class="content-section animate-in delay-2">
            <h2 class="section-title-custom">Books to Explore</h2>
            <p class="section-subtitle">Discover your next favorite read.</p>
            <div class="books-wrapper">
                @if (ViewBag.Books != null && ViewBag.Books.Count > 0)
                {
                    foreach (var book in ViewBag.Books)
                    {
                        <div class="book-card">
                            <a href="@Url.Action("Index", "Book", new { name = book.Title })">
                                <img class="book-cover" 
                                     src="@(string.IsNullOrEmpty(book.BookURL) ? "https://images.unsplash.com/photo-1543002588-bfa74002ed7e?w=300&h=400&fit=crop" : book.BookURL)" 
                                     alt="@book.Title">
                            </a>
                        </div>
                    }
                }
                else
                {
                    <p>No books available at the moment.</p>
                }
            </div>
        </div>

        <!-- Recent Posts -->
        <div class="content-section animate-in delay-3">
            <h2 class="section-title-custom">Recent Posts</h2>
            <p class="section-subtitle">Stay updated with the latest from our community.</p>
            <div class="recent-posts-grid">
                @if (ViewBag.Posts != null && ViewBag.Posts.Count > 0)
                {
                    foreach (var post in ViewBag.Posts)
                    {
                        <a href="@Url.Action("Index", "Post")" class="post-card" style="text-decoration: none; display: block; height: 100%;">
                            <div class="post-header">
                                <span class="post-category">Community</span>
                                <span class="post-time">Recent</span>
                            </div>
                            <h5>Post from Community</h5>
                            <p>@(post.PostContent.Length > 150 ? post.PostContent.Substring(0, 150) + "..." : post.PostContent)</p>
                        </a>
                    }
                }
                else
                {
                    <div class="post-card">
                        <div class="post-header">
                            <span class="post-category">Community</span>
                            <span class="post-time">Recent</span>
                        </div>
                        <h5>Welcome!</h5>
                        <p>No posts available yet. Be the first to share something with the community!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>