@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Daastan Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #FA5D19;
            --primary-hover: #E54D0F;
            --accent-dark: #000000;
            --bg-page: #F9F9F9;
            --surface: #FFFFFF;
            --text-primary: #262626;
            --text-secondary: rgba(38, 38, 38, 0.4);
            --border: rgba(0, 0, 0, 0.08);
            --shadow-sm: 0px 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0px 4px 6px -1px rgba(0, 0, 0, 0.1), 0px 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0px 10px 15px -3px rgba(0, 0, 0, 0.1), 0px 4px 6px -2px rgba(0, 0, 0, 0.05);
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 24px;
            --radius-full: 999px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            height: 100vh;
            overflow: hidden;
            background: var(--bg-page);
            background-image: 
                linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
            background-size: 20px 20px;
            background-attachment: fixed;
            color: var(--text-primary);
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .auth-container {
            display: flex;
            height: 100vh;
        }

        /* Left Illustration Section */
        .left-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            position: relative;
            background-image: url('@Url.Content("~/Images/loginIllustration.webp")');
            background-size: cover;
            background-position: center;
        }

        .left-section::before {
            display: none;
        }

        .content-wrapper {
            z-index: 2;
            max-width: 500px;
            text-align: center;
            display: none;
        }

        /* Right Form Section */
        .right-section {
            flex: 1;
            background: var(--bg-page);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            position: relative;
        }

        /* Brand Logo */
        .brand-header {
            position: absolute;
            top: 2rem;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 24px;
            font-weight: 700;
            color: var(--text-primary);
            letter-spacing: -0.02em;
        }

        .brand-header::before {
            display: none;
        }

        /* Auth Card */
        .auth-card {
            width: 100%;
            max-width: 440px;
            background: var(--surface);
            padding: 2.5rem 2rem;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border);
            animation: slideUp 500ms ease;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .auth-card h2 {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 28px;
            color: var(--text-primary);
            font-weight: 700;
            letter-spacing: -0.02em;
        }

        /* Tab Buttons */
        .tab-buttons {
            display: flex;
            gap: 0;
            margin-bottom: 2rem;
            background: var(--bg-page);
            padding: 4px;
            border-radius: var(--radius-full);
            border: 1px solid var(--border);
        }

        .tab-btn {
            flex: 1;
            padding: 12px 24px;
            background: transparent;
            color: var(--text-secondary);
            border: none;
            border-radius: var(--radius-full);
            font-weight: 500;
            text-align: center;
            text-decoration: none;
            transition: all 200ms ease;
            font-size: 14px;
            cursor: pointer;
            font-family: inherit;
        }

        .tab-btn:hover {
            color: var(--text-primary);
        }

        .tab-btn.active {
            background: var(--surface);
            color: var(--text-primary);
            box-shadow: var(--shadow-sm);
            font-weight: 600;
        }

        /* Form Elements */
        .form-floating {
            margin-bottom: 1rem;
            position: relative;
        }

        .form-control {
            width: 100%;
            border-radius: var(--radius-sm);
            padding: 12px 16px;
            border: 1px solid var(--border);
            height: 48px;
            font-size: 14px;
            background: var(--surface);
            color: var(--text-primary);
            transition: all 200ms ease;
            font-family: inherit;
        }

        .form-control::placeholder {
            color: var(--text-secondary);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(250, 93, 25, 0.1);
            background: var(--surface);
        }

        .form-floating label {
            position: absolute;
            top: 50%;
            left: 16px;
            transform: translateY(-50%);
            color: var(--text-secondary);
            font-size: 14px;
            pointer-events: none;
            transition: all 200ms ease;
            background: var(--surface);
            padding: 0 4px;
        }

        .form-control:focus + label,
        .form-control:not(:placeholder-shown) + label {
            top: 0;
            font-size: 12px;
            color: var(--primary);
            font-weight: 500;
        }

        /* Login Button */
        .btn-login {
            width: 100%;
            padding: 14px;
            background: var(--primary);
            color: white;
            font-weight: 600;
            border: none;
            border-radius: var(--radius-full);
            margin-top: 1rem;
            font-size: 15px;
            transition: all 200ms ease;
            cursor: pointer;
            box-shadow: var(--shadow-sm);
            font-family: inherit;
        }

        .btn-login:hover {
            background: var(--primary-hover);
            box-shadow: 0 4px 12px rgba(250, 93, 25, 0.25);
            transform: translateY(-1px);
        }

        .btn-login:active {
            transform: translateY(0) scale(0.98);
        }

        /* Forgot Password Link */
        .forgot-link {
            text-align: center;
            margin-top: 1.5rem;
        }

        .forgot-link a {
            color: var(--primary);
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: color 200ms ease;
        }

        .forgot-link a:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }

        /* Validation Messages */
        .text-danger {
            font-size: 13px;
            margin-bottom: 1rem;
            color: #dc3545 !important;
            display: block;
            padding: 12px 16px;
            background: rgba(220, 53, 69, 0.05);
            border-radius: var(--radius-sm);
            border-left: 3px solid #dc3545;
        }

        /* Responsive Design */
        @@media (max-width: 968px) {
            .left-section {
                display: none;
            }

            .right-section {
                flex: 1;
            }
        }

        @@media (max-width: 480px) {
            .brand-header {
                top: 1rem;
                font-size: 20px;
            }

            .auth-card {
                padding: 2rem 1.5rem;
            }

            .auth-card h2 {
                font-size: 24px;
            }
        }
    </style>
</head>

<body>
    <div class="auth-container">

        <div class="left-section">
            <div class="content-wrapper">
                <h1>Join the reading community</h1>
                <p>Discover new books, participate in discussions, and enjoy a unique reading experience.</p>
                <div class="feature-list">
                    <p>✓ Discover new books</p>
                    <p>✓ Share your opinions and reviews</p>
                    <p>✓ Connect with other readers</p>
                    <p>✓ Track your readings and achievements</p>
                </div>
            </div>
        </div>

        <div class="right-section">
            <div class="brand-header">
                <img src="~/Images/logo.png" alt="Daastan Hub Logo" height="36" />
                Daastan Hub
            </div>

            <div class="auth-card">
                <h2>Welcome Back</h2>

                <div class="tab-buttons">
                    <button class="tab-btn active">Log in</button>
                    <a href="/Identity/Account/Register" class="tab-btn">Create an account</a>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder=" " />
                        <label asp-for="Input.Email">Email address</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder=" " />
                        <label asp-for="Input.Password">Password</label>
                    </div>

                    <button type="submit" class="btn-login">Log in</button>

                    <div class="forgot-link">
                        <a asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>